{
  "manifest_version": 3,
  "name": "NEAR Explorer Button",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://testnet.nearblocks.io/address/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://testnet.nearblocks.io/*"]
}
